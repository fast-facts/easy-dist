{
  "name": "easy-dist",
  "version": "1.0.4",
  "description": "Copy source files and node_modules without devDependencies to destination directory.",
  "keywords": [
    "build",
    "node_modules",
    "distribute",
    "distribution",
    "awscdk",
    "cdk",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/fast-facts/easy-dist.git"
  },
  "bin": {
    "easy-dist": "bin/cli.js"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "rm -rf ./lib && tsc --project tsconfig.build.json && swc src --no-swcrc --config-file .swcrc.build.json --out-dir lib",
    "postbuild": "cp package.json lib && cp README.md lib",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint --fix src",
    "test:unit": "jest src --runInBand"
  },
  "dependencies": {
    "command-line-args": "^6.0.1",
    "command-line-usage": "^7.0.3",
    "glob": "^8.1.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "1.10.8",
    "@swc/jest": "^0.2.37",
    "@types/command-line-args": "5.2.3",
    "@types/command-line-usage": "5.0.4",
    "@types/glob": "8.1.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.10.7",
    "eslint-config-final": "^1.5.0",
    "jest": "^29.7.0",
    "prettier": "3.4.2",
    "typescript": "^5.5.4"
  }
}